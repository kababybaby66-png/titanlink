{
    "name": "titanlink",
    "version": "1.0.0",
    "description": "Low-latency peer-to-peer gaming client for remote multiplayer",
    "main": "./dist-electron/main.js",
    "author": "TitanLink Team",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:win": "npm run build -- --win",
        "build:mac": "npm run build -- --mac",
        "preview": "vite preview",
        "start:signaling": "cd signaling-server && npm start",
        "dev:all": "concurrently -k \"npm run start:signaling\" \"npm run electron:dev\"",
        "electron:dev": "npm run dev",
        "electron:build": "npm run build && electron-builder",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "socket.io-client": "^4.7.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.17",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "typescript": "^5.3.3",
        "vite": "^5.0.7",
        "vite-plugin-electron": "^0.28.0",
        "vite-plugin-electron-renderer": "^0.14.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.titanlink.app",
        "productName": "TitanLink",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "resources/**/*"
        ],
        "extraResources": [
            {
                "from": "resources/bin/",
                "to": "bin/",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "resources/",
                "to": "resources/",
                "filter": [
                    "**/*",
                    "!bin/**",
                    "!feeder-src/**"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "target": [
                "zip"
            ],
            "category": "public.app-category.games",
            "identity": null,
            "icon": "build/icon.png",
            "gatekeeperAssess": false,
            "hardenedRuntime": false
        }
    },
    "optionalDependencies": {
        "vigemclient": "^1.5.3"
    }
}